<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlinkTheLed.BluetoothPage">
    <ContentPage.Content>
        <StackLayout>



            <Label Text="Select the Bluethooth Options!"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />
            
            <Button Clicked="Button_BT_TurnOn" Text="Bluetooth - Turn On"/>
            <Button Clicked="Button_BT_TurnOff" Text="Bluetooth - Turn Off"/>
            <Button Clicked="Button_BT_ShowPaired" Text="Bluetooth - Show Paired"/>
            <Button Clicked="Button_BT_Discover" Text="Bluetooth - Discover"/>
            <Button Clicked="Button_BT_Connect" Text="Bluetooth - Connect"/>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>